<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shopping.lifeplay.activity.ProfileEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:paddingBottom="24dp">

            <android.support.v7.widget.CardView
                android:id="@+id/view2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_centerHorizontal="true"
                android:layout_margin="7dp"
                android:elevation="3dp"
                android:innerRadius="0dp"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:shape="ring"
                android:thicknessRatio="1"
                app:cardCornerRadius="80dp">

                <ImageView
                    android:id="@+id/user_profile_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/background_img">

                </ImageView>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view2">


                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_pick_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:onClick="loadImagefromCamera"
                    android:src="@android:drawable/ic_menu_camera" />


                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_pick_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:onClick="loadImagefromGallery"
                    android:src="@android:drawable/ic_menu_gallery" />


            </RelativeLayout>
        </RelativeLayout>

        <EditText
            android:id="@+id/user_fname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/my_acc"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="First Name"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#d0000000"
            android:textColorHint="#d0000000"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_margin="2dp"
            android:background="@color/dull_black" />

        <EditText
            android:id="@+id/user_lname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/my_acc"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:hint="Last Name"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#d0000000"
            android:textColorHint="#d0000000"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_margin="2dp"
            android:background="@color/dull_black" />

        <EditText
            android:id="@+id/service_Date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/calendar_black"
            android:drawablePadding="8dp"
            android:focusable="false"
            android:gravity="center_vertical"
            android:hint="Date of Birth"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#d0000000"
            android:textColorHint="#d0000000"
            android:textSize="16sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_margin="2dp"
            android:background="@color/dull_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:text="SUBMIT"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/settings"
            android:drawablePadding="8dp"
            android:onClick="changePassword"
            android:padding="15dp"
            android:text="Change Password"
            android:textColor="#d0000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_width_small"
            android:background="@color/dull_black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/logout_new"
            android:drawablePadding="8dp"
            android:onClick="logout"
            android:padding="15dp"
            android:text="Logout"
            android:textColor="#d0000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_width_small"
            android:background="@color/dull_black" />
    </LinearLayout>
</ScrollView>
