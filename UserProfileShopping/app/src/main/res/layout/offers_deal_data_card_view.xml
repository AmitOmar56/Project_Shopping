<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/offer_deal_cardview"
    android:layout_width="match_parent"
    android:layout_height="200.0dp"
    android:layout_marginBottom="4.0dp"
    android:layout_marginLeft="8.0dp"
    android:layout_marginRight="8.0dp"
    android:layout_marginTop="4.0dp"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/offer_deal_image"
            android:layout_width="match_parent"
            android:layout_height="220.0dp"
            android:background="@color/white_greyish"
            android:scaleType="fitXY" />

        <LinearLayout
            android:id="@+id/layout_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/dull_background"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:paddingLeft="12dp"
            android:paddingTop="6dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/offer_deal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name "
                    android:textColor="#ffffff"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/offer_deal_discription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item descriptions"
                    android:textColor="@color/white_greyish"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/offer_deal_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="Rs. 8,999"
                android:textColor="#4CAF50"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>